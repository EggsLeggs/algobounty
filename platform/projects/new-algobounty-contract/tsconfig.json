{
  "compilerOptions": {
    "target": "ES2020",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "lib": ["ES2020", "DOM"],
    "types": [],
    "typeRoots": ["./smart_contracts", "./node_modules/@types"]
  },
  "include": ["smart_contracts/**/*.ts", "smart_contracts/**/*.d.ts"],
  "exclude": ["node_modules", "dist", "coverage"]
}
